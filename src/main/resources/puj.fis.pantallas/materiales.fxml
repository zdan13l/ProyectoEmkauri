<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controladores.MaterialesController">

    <center>
        <VBox spacing="10" alignment="TOP_LEFT" BorderPane.alignment="CENTER">
            <children>

                <Label text="Materiales del curso" style="-fx-font-size:18px; -fx-font-weight:bold;"/>

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="20"/>
                        <ColumnConstraints percentWidth="80"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints vgrow="NEVER"/>
                        <RowConstraints vgrow="NEVER"/>
                    </rowConstraints>

                    <children>
                        <Label text="TÃ­tulo:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtTitulo" promptText="p.ej. Syllabus del curso" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="URL:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtUrl" promptText="https://..." GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Tipo:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <ChoiceBox fx:id="cbTipo" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <HBox spacing="10">
                    <children>
                        <Button fx:id="btnSubir" text="Subir material" onAction="#onSubir"/>
                        <Button fx:id="btnEliminar" text="Eliminar seleccionado" onAction="#onEliminar"/>
                    </children>
                </HBox>

                <ListView fx:id="listView" prefHeight="300"/>
            </children>
            <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
        </VBox>
    </center>
</BorderPane>