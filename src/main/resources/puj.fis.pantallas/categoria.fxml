<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="controladores.CategoriaController"
           style="-fx-background-color: linear-gradient(to bottom right, #4A90E2, #50C9CE);">

    <VBox alignment="CENTER" spacing="15.0" maxWidth="700"
          style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30;">

        <effect>
            <DropShadow radius="10" color="#00000055"/>
        </effect>

        <Label text="Gestión de Categorías"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

        <VBox spacing="10" alignment="CENTER">
            <Label text="Crear / Editar Categoría"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #555555;"/>
            <TextField fx:id="nombreField" promptText="Nombre de la Categoría"
                       style="-fx-background-radius: 8; -fx-padding: 8; -fx-border-radius: 8;
                              -fx-border-color: #cccccc; -fx-background-color: #f9f9f9;"/>
            <TextField fx:id="descripcionField" promptText="Descripción (opcional)"
                       style="-fx-background-radius: 8; -fx-padding: 8; -fx-border-radius: 8;
                              -fx-border-color: #cccccc; -fx-background-color: #f9f9f9;"/>
            <HBox spacing="10" alignment="CENTER">
                <Button text="Crear" onAction="#onCreateClick"
                        style="-fx-background-color: #4A90E2; -fx-text-fill: white; -fx-font-weight: bold;
                               -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand;"/>
                <Button text="Editar" onAction="#onEditClick"
                        style="-fx-background-color: #50C9CE; -fx-text-fill: white; -fx-font-weight: bold;
                               -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand;"/>
                <Button text="Eliminar" onAction="#onDeleteClick"
                        style="-fx-background-color: #FF5252; -fx-text-fill: white; -fx-font-weight: bold;
                               -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand;"/>
            </HBox>
        </VBox>

        <Label text="Categorías Existentes"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #555555;"/>
        <TableView fx:id="categoriasTable" prefHeight="200" prefWidth="400">
            <columns>
                <TableColumn fx:id="idColumn" text="ID"/>
                <TableColumn fx:id="nombreColumn" text="Nombre"/>
                <TableColumn fx:id="descripcionColumn" text="Descripción"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

    </VBox>
</StackPane>