<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>

<StackPane style="-fx-background-color: linear-gradient(to bottom right, #4A90E2, #50C9CE);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="controladores.CategoriaController">

    <VBox alignment="CENTER" maxWidth="700" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30;">

        <effect>
            <DropShadow color="#00000055" radius="10" />
        </effect>

        <Label prefHeight="32.0" prefWidth="235.0" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Gestión de Categorías" />

        <VBox alignment="CENTER" spacing="10">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #555555;" text="Crear / Editar Categoría" />
            <TextField fx:id="nombreField" promptText="Nombre de la Categoría" style="-fx-background-radius: 8; -fx-padding: 8; -fx-border-radius: 8;                               -fx-border-color: #cccccc; -fx-background-color: #f9f9f9;" />
            <TextField fx:id="descripcionField" promptText="Descripción (opcional)" style="-fx-background-radius: 8; -fx-padding: 8; -fx-border-radius: 8;                               -fx-border-color: #cccccc; -fx-background-color: #f9f9f9;" />
            <HBox alignment="CENTER" spacing="10">
                <Button onAction="#onCreateClick" style="-fx-background-color: #4A90E2; -fx-text-fill: white; -fx-font-weight: bold;                                -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand;" text="Crear" />
                <Button onAction="#onEditClick" style="-fx-background-color: #50C9CE; -fx-text-fill: white; -fx-font-weight: bold;                                -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand;" text="Editar" />
                <Button onAction="#onDeleteClick" style="-fx-background-color: #FF5252; -fx-text-fill: white; -fx-font-weight: bold;                                -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand;" text="Eliminar" />
            </HBox>
        </VBox>

        <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #555555;" text="Categorías Existentes" />
        <TableView fx:id="categoriasTable" prefHeight="200" prefWidth="400">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" />
                <TableColumn fx:id="nombreColumn" text="Nombre" />
                <TableColumn fx:id="descripcionColumn" text="Descripción" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

    </VBox>
</StackPane>
